<h3><%= board.get("title") %></h3>
<ul id="lists-ul"></ul>

<script>
  $(function(){
    $('#lists-ul').sortable({
      items: ">li:not(.lists-new-el)",
      placeholder: "list-sortable-placeholder",
      forcePlaceholderSize: true,
      tolerance: "pointer",
      
      start: function(e, ui){
        ui.placeholder.height(ui.item.height());
        $(ui.item).addClass('rotated');
      },
      stop: function(event, ui){
        $(ui.item).removeClass('rotated');
      },
      update: function(event, ui){
        $(".lists-show-el").each(function(index){
          $(this).trigger('drop', index);
        })
      }
    })
  })
</script>