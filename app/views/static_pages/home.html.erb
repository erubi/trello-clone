<div id="home-container">
  <section class="home-welcome">
    <h1>Welcome back to Trello Clone!</h1>
    <%= link_to "Demo Account", users_path, method: :post, class: "home-demo-login" %>
    <a id="login-link" href="#">Log in with email and password</a>
  
    <form class="group" action="<%= session_url %>" method="post">
      <input 
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">
    
      <label for="email">Email (or username)</label>
      <input
        id="email"
        type="text"
        placeholder="e.g., user@example.com"
        name="user[email]">
    
      <label for="password">Password</label>
      <input
        id="password"
        type="password"
        placeholder="e.g., &middot;&middot;&middot;&middot;&middot;&middot;&middot;&middot;&middot;&middot;&middot;"
        name="user[password]">
      
      <input type="submit" value="Log In">
    </form>
    
    <%= link_to "Log in as Guest", users_path, method: :post, id: "demo-link" %>
  </section>

  <section class="home-description">
    <h1>Trello Clone makes it easy to organize anything with anyone.</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
    <a href="<%= new_user_url %>" class="home-sign-up-btn">Sign Up - It's Free.</a>
    <%= link_to "Or Demo Account", users_path, method: :post %>
  </section>
</div>
<script>
  $(function(){
    $('#login-link').on('click', function(){
      $('.home-welcome').addClass('home-show-login');
    })
  })
</script>